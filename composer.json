{
    "name": "binaryoung/jieba-php",
    "description": "The Jieba Chinese Word Segmentation Implemented in PHP",
    "keywords": [
        "jieba",
        "jieba-php",
        "chinese",
        "segmentation",
        "FFI",
        "结巴",
        "分词"
    ],
    "homepage": "https://github.com/binaryoung/jieba-php",
    "license": "MIT",
    "authors": [
        {
            "name": "binaryoung",
            "email": "me@xiayang.me",
            "homepage": "https://xiayang.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-ffi": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "fukuball/jieba-php": "^0.33.0",
        "phpunit/phpunit": "^9.0",
        "symfony/var-dumper": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Binaryoung\\Jieba\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Binaryoung\\Jieba\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "bench": "php benchmarks/benchmark.php",
        "example": "php examples/example.php"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
